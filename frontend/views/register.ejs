<%- include('partials/header', { title: 'Register - Note-Taking App' }) %>
<main>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h3 class="card-title text-center mb-4">Register</h3>
                            <div class="mb-3" class="input-group">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                                <small id="nameError" class="error-message"></small>
                            </div>
                            <div class="mb-3" class="input-group">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                                <small id="emailError" class="error-message"></small>
                            </div>
                            <div class="mb-3" class="input-group">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                                <small id="passwordError" class="error-message"></small>
                            </div>
                            <button id="loginButton" class="btn btn-primary w-100">Register</button>
                        <div class="text-center mt-3">
                            <p>Already have an account? <a href="/login" class="btn btn-link">Login here</a></p>
                        </div>
                        <!-- Badge for feedback messages -->
                        <div id="feedbackMessage" class="text-center mt-3">
                            <span id="feedbackBadge" class="badge d-none"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>    
<script src="../scripts/utilities/validators.js"></script>
<script src="/scripts/register.js"></script>
<%- include('partials/footer') %>